{
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmPasteNative": false,
  "workbench.colorTheme": "One Dark Modern",
  "explorer.confirmDragAndDrop": false,
  // ... Settings specific to Python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "diffEditor.ignoreTrimWhitespace": false
  },
  "jupyter.interactiveWindow.creationMode": "perFile",
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "workbench.editorAssociations": {
    "*.xlsx": "cweijan.officeViewer",
    "*.csv": "default",
    "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default",
    "{git,gitlens}:/**/*.{md,csv,svg}": "default"
  },
  "hediet.vscode-drawio.resizeImages": null,
  "git.confirmSync": false,
  "explorer.confirmDelete": false,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  // Language words
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "!python"
  ],
  "cSpell.language": "en,pt-BR",
  "cSpell.userWords": [
    "AESA",
    "anatel",
    "Ariba",
    "bacen",
    "backoffice",
    "chosed",
    "clusterizar",
    "clusterization",
    "cofins",
    "covariável",
    "Dani",
    "datafactory",
    "Docstrings",
    "furukawa",
    "Homologation",
    "ipynb",
    "JARBIS",
    "jupyter",
    "KAMS",
    "Kanban",
    "Kazu",
    "kedro",
    "KPI's",
    "openpyxl",
    "OPGW",
    "pipenv",
    "preprocess",
    "preprod",
    "Pyenv",
    "radicade",
    "salesforce",
    "sheetname",
    "sheetnames",
    "SQOL"
  ],
  "interactiveWindow.executeWithShiftEnter": true,
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.autofetch": true,
  "remote.SSH.serverInstallPath": {
    "10.0.1.23": "/mnt/data/.vscode-server"
  },
  // Terminal - Terminal settings applies to VsCode terminal
  "terminal.integrated.defaultProfile.linux": "bash", // Ou "zsh", "fish", conforme seu terminal padrão
  // "terminal.integrated.splitCwd": "workspaceRoot",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
    },
  },
  "debug.onTaskErrors": "showErrors",
  "files.autoSave": "afterDelay",
  "git.openRepositoryInParentFolders": "never",
  "keyboard.dispatch": "keyCode",
  // https: //www.datanovia.com/books/r-in-vscode/introduction-to-r-programming-in-vscode.html
  "[r]": {
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.formatOnSave": true,
    "editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
  },
  "[rmd]": {
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.formatOnSave": true
  },
  // Always send code to the currently active R terminal (Do not spawn new terminal every time)
  "r.alwaysUseActiveTerminal": true,
  // Session Watcher — allows executing code into radian nicely
  "r.sessionWatcher": true,
  "r.source.focus": "editor",
  // Optional: For a cleaner radian experience (no telemetry)
  "r.bracketedPaste": true,
  // Point VS Code’s R extension to your Conda-env R: - I have not followed tips from 4. TopVSCode Extensions for R Programming
  "r.rterm.linux": "/home/guilherme/miniconda3/envs/r-datasci-env/bin/Radian",
  // "r.rterm.linux": "conda run -n r-datasci-env && radian",
  // Tell the R extension where to find Rscript (used for running code):
  "r.rpath.linux": "/home/guilherme/miniconda3/envs/r-datasci-env/bin/R",
  // Disable extra options that radian doesn't recognize
  "r.rterm.option": [],
  // Use the languageserver for enhanced editing features:
  // Optional: enable Language Server Protocol (LSP) debug mode
  "r.lsp.debug": true,
  "r.lsp.diagnostics": true,
  "r.plot.useHttpgd": true,
  // (Optional) If you want to preview R Markdown (.Rmd) in-editor:
  "files.associations": {
    "*.Rmd": "rmd",
    "*.rmd": "rmd"
  },
  "workbench.iconTheme": "material-icon-theme",
  "editor.formatOnSave": true,
  "makefile.configureOnOpen": true,
  "projectManager.git.baseFolders": [
    "/home/guilherme/Documents"
  ]
}