{
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "editor.parameterHints.enabled": true, // It does not work
  "explorer.confirmPasteNative": false,
  "explorer.confirmDragAndDrop": false,
  // ... Settings specific to R
  "[r]": {
    // "editor.defaultFormatter": "REditorSupport.r",
    // "editor.defaultFormatter": "Posit.air-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always",
      "source.fixAll.lintr": "always"
    },
    "r.lintr.enabled": true,
    "r.term.option": "radian",
    "diffEditor.ignoreTrimWhitespace": false,
    "rewrap.doubleSentenceSpacing": true
  },
  // ... Settings specific to Python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    },
    "diffEditor.ignoreTrimWhitespace": false
  },

  "[jupyter]": {
      "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.askForKernelRestart": false,

  "ruff.lint.enable": true,
  "ruff.organizeImports": true,

  "notebook.lineNumbers": "on",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.xlsx": "cweijan.officeViewer",
    "*.csv": "default",
    "{git,gitlens}:/**/*.{md,csv,svg}": "default"
  },
  "hediet.vscode-drawio.resizeImages": null,
  "git.confirmSync": false,
  "explorer.confirmDelete": false,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  // # This font is designed for coding and reading. you have to download it first
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "diffEditor.hideUnchangedRegions.enabled": true,
  // Language words
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "!python"
  ],
  "cSpell.language": "en,pt-BR",
  "cSpell.userWords": [
    "AESA",
    "anatel",
    "Ariba",
    "bacen",
    "backoffice",
    "chosed",
    "clusterizar",
    "clusterization",
    "cofins",
    "covariável",
    "Dani",
    "datafactory",
    "Docstrings",
    "furukawa",
    "Homologation",
    "ipynb",
    "JARBIS",
    "jupyter",
    "KAMS",
    "Kanban",
    "Kazu",
    "kedro",
    "KPI's",
    "openpyxl",
    "OPGW",
    "pipenv",
    "preprocess",
    "preprod",
    "Pyenv",
    "radicade",
    "salesforce",
    "sheetname",
    "sheetnames",
    "SQOL"
  ],
  "interactiveWindow.executeWithShiftEnter": true,
  "workbench.iconTheme": "material-icon-theme",
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.autofetch": true,
  "remote.SSH.serverInstallPath": {
    // "10.0.1.23": "/mnt/data/.vscode-server",
    // "10.0.1.22": "/mnt/data/.vscode-server"
  },
  // Terminal - Terminal settings applies to VsCode terminal
  "terminal.integrated.defaultProfile.linux": "bash", // Ou "zsh", "fish", conforme seu terminal padrão
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash"
    },
  },
  "terminal.integrated.fontFamily": "monospace",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editorLargeFileConfirmation": 100,
  "workbench.colorCustomizations": {},
  // Extension Project Manager
  "projectManager.git.baseFolders": [
    "/home/guilherme/Documents",
    "/mnt/data/guilherme"
  ],
  "remote.extensionKind": {
    "alefragnani.project-manager": [
      "workspace"
    ]
  },
  // RAINBOW INDENT
  // Using the light mode
  "indentRainbow.indicatorStyle": "light",
  // we use a simple 1 pixel wide line
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  // the same colors as above but more visible
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  // Path Intellisense
  // "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": false,
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "workbench.colorTheme": "One Dark Modern",
  "python.languageServer": "Pylance",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportUserSymbols":true,
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.indexing": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,

  "notebook.diff.ignoreMetadata": true,
  "notebook.diff.ignoreOutputs": true,
  // ==========================
  // QUALITY OF LIFE ---------- IntelliSense / Editor ----------
  // ==========================
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showSnippets": true,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnType": true,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  // ==========================
  // OPTIONAL NICE TO HAVES
  // ==========================
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true
  }

}
