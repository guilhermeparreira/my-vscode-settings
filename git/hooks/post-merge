#!/bin/bash
# post-merge hook: limpa branches locais jÃ¡ mescladas no main

echo "ðŸ§¹ Limpando branches locais jÃ¡ mescladas..."

# Atualiza referÃªncias remotas e remove as deletadas
git fetch -p

# Deleta branches locais jÃ¡ mescladas em main (exceto main)
git branch --merged main | grep -Ev "^(main|dev)$" | xargs git branch -d 2>/dev/null

echo "âœ… Branches limpas com sucesso."
